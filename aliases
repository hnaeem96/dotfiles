# Git aliases
alias gs="git status"
alias gc="git commit"
alias ga="git add"
alias gb="git branch"
alias gpl="git pull"
alias gps="git push"
alias gpf="git push --force-with-lease"
alias gco="git checkout"
alias gm="git merge"
alias grm="git rm"
alias gmv="git mv"
alias gdf="git diff"
alias gt="git tag | grep v[0-9] | sort -V"
alias gss="git stash save"
alias gsl="git stash show stash^{/$*} -p"
alias gsa="!f() { git stash apply stash^{/$*}; }; f"
alias gri="git rebase"
alias grim="git rebase origin/main"
alias grimaster="git rebase origin/master"